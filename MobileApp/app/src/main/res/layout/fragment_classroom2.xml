<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <ProgressBar
        android:id="@+id/loading_spinner"
        android:layout_width="74dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <!-- Fila 1 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/temperature_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:contentDescription="."
                android:onClick="temperatureButton"
                android:src="@drawable/temperature" />

            <TextView
                android:id="@+id/aula2Temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:fontFamily="sans-serif"
                android:text=""
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/temperature_exclamation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:contentDescription="@string/danger_indicator"
                android:src="@drawable/exclamation"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Fila 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/humidity_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:contentDescription="."
                android:onClick="humidityButton"
                android:src="@drawable/humidity" />

            <TextView
                android:id="@+id/aula2Humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:fontFamily="sans-serif"
                android:text=""
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/humidity_exclamation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/exclamation"
                android:contentDescription="@string/danger_indicator"
                android:visibility="gone"
                android:layout_gravity="end"/>

        </LinearLayout>

        <!-- Fila 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:contentDescription="."
                android:onClick="boton3"
                android:src="@drawable/pollution" />

            <TextView
                android:id="@+id/aula2Co"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:fontFamily="sans-serif"
                android:text=""
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/co_exclamation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/exclamation"
                android:contentDescription="@string/danger_indicator"
                android:visibility="gone"
                android:layout_gravity="end"/>

        </LinearLayout>

        <!-- Fila 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:contentDescription="."
                android:onClick="boton4"
                android:src="@drawable/voc" />

            <TextView
                android:id="@+id/aula2Voc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:fontFamily="sans-serif"
                android:text=""
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/voc_exclamation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/exclamation"
                android:contentDescription="@string/danger_indicator"
                android:visibility="gone"
                android:layout_gravity="end"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>